{% extends 'base.html.twig' %}
{% block title %}Page d'accueil{% endblock %}
{% block body%}
<div class="wish">
    <h3>{{ wish.title }}</h3>
    <p class="wish-info">Created by {{ wish.author }} on {{ wish.dateCreated | date('d/m/Y') }}</p>
    <p>{{ wish.description }}</p>
    <img src="{{ asset('images/'~wish.url~'.jpg') }}" alt="" />
    {% for cat in wish.categories %}
        <p>{{ cat.name }}</p>
    {% endfor %}
    <button class="btn btn-danger">Supprimer</button>
    <button class="btn btn-secondary">Modifier</button>
    <a href="{{ path('app_wish_add', {id : wish.id}) }}" class="btn btn-secondary">Ajouter cat√©gorie</a>
</div>
{% endblock %}
