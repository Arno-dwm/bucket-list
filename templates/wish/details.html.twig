{% extends 'base.html.twig' %}
{% block title %}Page d'accueil{% endblock %}
{% block body%}
<div class="wish">
    <h3>{{ wish.title }}</h3>
    <p class="wish-info">Created by {{ wish.user.username }} on {{ wish.dateCreated | date('d/m/Y') }}</p>
    <p>{{ wish.description }}</p>
    <img src="{{ asset('images/'~wish.url~'.jpg') }}" alt="" />


    {% for cat in wish.categories %}
        <p>{{ cat.name }}</p>
    {% endfor %}
    {% if is_granted(('IS_AUTHENTICATED'))  %}
        {% if app.user.userIdentifier == wish.user.email %}
            <a href="{{ path('app_wish_update', {id: wish.id}) }}" class="btn btn-secondary">Modifier</a>
        {% endif %}
        {% if is_granted(('ROLE_ADMIN')) or app.user.userIdentifier == wish.author%}

            <a href="{{ path('app_wish_delete', {id : wish.id, token:csrf_token('wish_delete' ~ wish.id)}) }}" class="btn btn-danger" onclick="return confirm('Étes-vous sûr ?')">Supprimer</a>
        {% endif %}
    {% endif %}

    <!-- <a href="{{ path('app_wish_add', {id : wish.id}) }}" class="btn btn-secondary">Ajouter catégorie</a>-->
</div>
{% endblock %}
